const int MOD = 1000000007;
const int MAX_N = 200005;

int main() {

    int t;
    scanf("%d",t);
    while (t--) {
        int n, k;
        scanf("%d%d",n, k);
        int arr[n];
        int sum = 0;
        for (int i = 0; i < n; i++) {
            scanf("%d",arr[i])
            sum += arr[i];
        }
        int rinc = 0;
        for (int i = n - 1; i >= 1; i--) {
            sum -= arr[i];
            int p = arr[i] * 1.0 / sum * 100;
            int at =
                (100 * arr[i] + k - 1) / k; //(ceil)((ld)100.0 / k * arr[i]);
            if (at > sum) {
                sum = at;
            }
        }
        printf("%d\n", sum-arr[0]);
    }

    return 0;
}